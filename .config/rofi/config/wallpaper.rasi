configuration {
    show-icons:                     true;
    display-drun: 		            "ï‘„";
    drun-display-format:            "{icon}";
    disable-history:                false;
    click-to-exit: 		            true;
    location:                       0;
}

  *{
    screen-padding:               calc(50% - 85px) 20%;
}

@import "font.rasi"
@import "themes/default.rasi"

/* Line Responsible For Button Layouts */
/* BUTTON = TRUE */

#window {
    background-color: rgba(255, 255, 255, 0.1);
    fullscreen:true;
    padding: @screen-padding;
    location: center;
    children: [ mainbox ];
}

mainbox {
    text-color:                     @FG;
    border:                  	    0 0 2px 0;
    border-color:                   @BDR;
    border-radius:                  15px;
    background-color:               @BG;
    children:["listview"];
    padding:                        0px 15px;
}

listview {
    background-color:               transparent;
    fixed-columns: true;
    lines: 1;
    columns: 5;
    cycle:                          true;
    dynamic:                        true;
    scrollbar: false;
    children: ["element"];
    layout: vertical;
}

element {
    background-color:               @BG;
    text-color:                     @FG;
    width: 500px;
    border: 2px;
    orientation: vertical;
    children: ["element-icon"];
}

element-icon {
    background-color: 		        transparent;
    size:                           0px 150px;
}

element selected {
    background-color:               @SELTE;
    text-color:                     @SEL;
    border-radius:                  10px;
    border-color:                   @BDR;
}


