;; Show all notifications.
;;

(defwidget notify []
    (scroll :hscroll true :vscroll true
        (box :class "notify" :orientation "v" :space-evenly "false"
            (notify-title)
            (notify-content)
        )
    )
)
(defwidget notify-title []
