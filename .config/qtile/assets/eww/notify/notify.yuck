)

(defwidget notify-content []
  (box :orientation "v"  :spacing 0
     (literal :content update-notify-list)
  )
)


(defwindow notify
    :geometry (geometry :x "0%"
                        :y "0%"
                        :width "46%"
                        :height "50%"
                        :anchor "center")

    :wm-ignore false
    (notify))
