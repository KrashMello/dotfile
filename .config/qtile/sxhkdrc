super + s
	screenshots --now;

super + shift + s
	screenshots --sel;

super + alt + s
	screenshots --in10;

# Reload sxhkd
control + alt + r
  notify-send "Reloading sxhkd" & pkill -USR1 -x sxhkd

# ranger 
#
super + e
	OpenApps --TfileManager;

#floating Terminal

super + shift + Return 
	OpenApps --floating;

#open rofi powermenu
super + BackSpace
	powermenu;

#open clipcat menu
control + alt + h
  OpenApps --clipcat;

#redshift
super + r
  notify-send "Active Redshift" & redshift -P -O 3000;

super + shift + r
  notify-send "desactive Redshift" & redshift -x

