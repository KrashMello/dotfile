super + s
	screenshots --now;

super + shift + s
	screenshots --sel;

super + alt + s
	screenshots --in10;

# Reload sxhkd
control + alt + r
  notify-send "Reloading sxhkd" & pkill -USR1 -x sxhkd

# ranger 
#
super + e
	OpenApps --TfileManager;

#floating Terminal

super + shift + Return 
	OpenApps --floating;

#open rofi powermenu
super + BackSpace
	powermenu;

#open clipcat menu
control + alt + 4
  OpenApps --clipcat;

#show notifications
control + alt + 2
  OpenApps --notify;

#show notifications
control + alt + 3
  OpenApps --actions;

#lock screen
super + shift + l
  OpenApps --screenlock;

#redshift
super + r
  notify-send "Active Redshift" & redshift -P -O $(if [ "$(date +"%H")" -ge 18 ]; then echo 3000; else echo 5000; fi);

super + shift + r
  notify-send "desactive Redshift" & redshift -x

#wallpaper selector
super + shift + w
  wallpaper_selector;

# helper
super + shift + h
  helper;

# theme selector
super + t
  theme-selector;

# power profiles 
control + alt + p
    powerprofile;

#emoji selector
super + control + space
  OpenApps --emoji;
